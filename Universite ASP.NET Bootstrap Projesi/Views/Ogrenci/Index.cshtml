@model IEnumerable<Universite_ASP.NET_Bootstrap_Projesi.Models.Universite_Ogrenciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage3ADMIN.cshtml";
}

<h2>Öğrenci Ekranı</h2>


<p>@Html.ActionLink("Create New", "YeniOgrenci", null, new { @class = "btn btn-success" })</p>
<table class="table-striped col-lg-12">
    <tr class="col-lg-12">


        <th>

            @Html.DisplayNameFor(Model => Model.OgrenciAdSoyad)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.OgrenciPuanlama)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.Yas)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.Adres)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.Odeme)

        </th>

        @*<th>

            @Html.DisplayNameFor(Model => Model.ProjeNo)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.FakulteBolumNo)

        </th>*@

    </tr>

    @foreach (var item in Model)

    {
        <tr>

            <td>

                @Html.DisplayFor(Model => item.OgrenciAdSoyad)
            </td>

            <td>

                @Html.DisplayFor(Model => item.OgrenciPuanlama)
            </td>

            <td>

                @Html.DisplayFor(Model => item.Yas)
            </td>
            <td>

                @Html.DisplayFor(Model => item.Adres)
            </td>
            <td>

                @Html.DisplayFor(Model => item.Odeme)
            </td>

            @*<td>

                @Html.DisplayFor(Model => item.ProjeNo)
            </td>

            <td>

                @Html.DisplayFor(Model => item.FakulteBolumNo)
            </td>*@

            <td>
                @Html.ActionLink("Edit", "DuzenleOgrenci", new { ogrencino = item.OgrenciNo }, new { @class = "btn btn-warning" }) | @Html.ActionLink("Delete", "DeleteOgrenci", new { id = item.OgrenciNo }, new { @class = "btn btn-warning" })

            </td>

        </tr>
    }


</table>