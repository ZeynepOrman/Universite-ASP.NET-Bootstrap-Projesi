@model IEnumerable<Universite_ASP.NET_Bootstrap_Projesi.Models.Universite_OgretimGorevlileri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage3ADMIN.cshtml";
}

<h2>Öğretim Görevlisi Ekranı</h2>


<p>@Html.ActionLink("Create New", "YeniOgretimGorevlisi", null, new { @class = "btn btn-success" })</p>
<table class="table-striped col-lg-12">
    <tr class="col-lg-12">


        <th>

            @Html.DisplayNameFor(Model => Model.OgretimGorevlisiAdiSoyadi)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.OgretimGorevlisiOkul)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.OgretimGorevlisiDers)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.OgretimGorevlisiProje)

        </th>

        @*<th>

            @Html.DisplayNameFor(Model => Model.TelefonNo)

        </th>

        <th>

            @Html.DisplayNameFor(Model => Model.FakulteBolumNo)

        </th>*@

    </tr>

    @foreach (var item in Model)

    {
        <tr>

            <td>

                @Html.DisplayFor(Model => item.OgretimGorevlisiAdiSoyadi)
            </td>

            <td>

                @Html.DisplayFor(Model => item.OgretimGorevlisiOkul)
            </td>

            <td>

                @Html.DisplayFor(Model => item.OgretimGorevlisiDers)
            </td>
            <td>

                @Html.DisplayFor(Model => item.OgretimGorevlisiProje)
            </td>

            @*<td>

                @Html.DisplayFor(Model => item.TelefonNo)
            </td>

            <td>

                @Html.DisplayFor(Model => item.FakulteBolumNo)
            </td>*@

            <td>
                @Html.ActionLink("Edit", "DuzenleOgretimGorevlisi", new { ogretimgorevlisino = item.OgretimGorevlisiNo }, new { @class = "btn btn-warning" }) | @Html.ActionLink("Delete", "DeleteOgretimGorevlisi", new { id = item.OgretimGorevlisiNo }, new { @class = "btn btn-warning" })

            </td>

        </tr>
    }


</table>